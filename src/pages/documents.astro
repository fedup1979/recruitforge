---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Mes documents — AMBITIA" description="Gérez vos CV et vidéos.">
  <section class="py-12 px-4">
    <div class="max-w-2xl mx-auto">
      <!-- Loading -->
      <div id="loading" class="text-center py-16">
        <span class="loading loading-spinner loading-lg text-primary"></span>
      </div>

      <!-- Content -->
      <div id="content" class="hidden">
        <h1 class="text-3xl font-bold text-base-content mb-2">Mes documents</h1>
        <p class="text-base-content/60 mb-8">Gérez vos CV et vidéos de présentation.</p>

        <!-- CVs section -->
        <h2 class="text-lg font-semibold text-base-content mb-3">CV</h2>
        <div id="cv-list" class="space-y-3 mb-8">
          <!-- Populated by JS -->
        </div>
        <div id="no-cv" class="text-base-content/50 text-sm mb-8 hidden">Aucun CV enregistré.</div>

        <!-- Videos section -->
        <h2 class="text-lg font-semibold text-base-content mb-3">Vidéos de présentation</h2>
        <div id="video-list" class="space-y-3 mb-8">
          <!-- Populated by JS -->
        </div>
        <div id="no-video" class="text-base-content/50 text-sm mb-8 hidden">Aucune vidéo enregistrée.</div>

        <a href="/dashboard" class="btn btn-ghost btn-sm gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          Retour au tableau de bord
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  import { createClient } from '@supabase/supabase-js';

  const supabase = createClient(
    import.meta.env.PUBLIC_SUPABASE_URL,
    import.meta.env.PUBLIC_SUPABASE_ANON_KEY
  );

  async function init() {
    const { data: { session } } = await supabase.auth.getSession();
    if (!session) { window.location.href = '/login'; return; }

    const { data: docs } = await supabase
      .from('candidate_documents')
      .select('*')
      .eq('user_id', session.user.id)
      .order('created_at', { ascending: false });

    document.getElementById('loading')!.classList.add('hidden');
    document.getElementById('content')!.classList.remove('hidden');

    const cvDocs = (docs || []).filter(d => d.doc_type === 'cv');
    const videoDocs = (docs || []).filter(d => d.doc_type === 'video');

    // Render CVs
    const cvList = document.getElementById('cv-list')!;
    if (cvDocs.length === 0) {
      document.getElementById('no-cv')!.classList.remove('hidden');
    } else {
      cvList.innerHTML = cvDocs.map(doc => {
        const date = new Date(doc.created_at).toLocaleDateString('fr-FR');
        const size = doc.file_size_bytes ? `${(doc.file_size_bytes / 1024 / 1024).toFixed(1)} Mo` : '';
        return `
          <div class="card bg-base-200">
            <div class="card-body py-3 flex-row items-center justify-between">
              <div>
                <span class="font-medium text-sm">${doc.file_name}</span>
                <p class="text-xs text-base-content/50">${date} ${size ? '— ' + size : ''}</p>
              </div>
              <div class="flex gap-1">
                <button class="btn btn-ghost btn-xs btn-download" data-path="${doc.storage_path}">Télécharger</button>
                <button class="btn btn-ghost btn-xs text-error btn-delete" data-id="${doc.id}" data-path="${doc.storage_path}">Supprimer</button>
              </div>
            </div>
          </div>
        `;
      }).join('');
    }

    // Render Videos
    const videoList = document.getElementById('video-list')!;
    if (videoDocs.length === 0) {
      document.getElementById('no-video')!.classList.remove('hidden');
    } else {
      videoList.innerHTML = videoDocs.map(doc => {
        const date = new Date(doc.created_at).toLocaleDateString('fr-FR');
        const size = doc.file_size_bytes ? `${(doc.file_size_bytes / 1024 / 1024).toFixed(1)} Mo` : '';
        return `
          <div class="card bg-base-200">
            <div class="card-body py-3">
              <div class="flex items-center justify-between">
                <div>
                  <span class="font-medium text-sm">${doc.file_name}</span>
                  <p class="text-xs text-base-content/50">${date} ${size ? '— ' + size : ''}</p>
                </div>
                <div class="flex gap-1">
                  <button class="btn btn-ghost btn-xs btn-preview-video" data-path="${doc.storage_path}">Voir</button>
                  <button class="btn btn-ghost btn-xs text-error btn-delete" data-id="${doc.id}" data-path="${doc.storage_path}">Supprimer</button>
                </div>
              </div>
              <div class="video-preview-container hidden mt-3" data-path="${doc.storage_path}">
                <!-- Video player inserted by JS -->
              </div>
            </div>
          </div>
        `;
      }).join('');
    }

    // Download buttons
    document.querySelectorAll('.btn-download').forEach(btn => {
      btn.addEventListener('click', async () => {
        const path = btn.getAttribute('data-path')!;
        const { data } = await supabase.storage.from('candidates').createSignedUrl(path, 3600);
        if (data?.signedUrl) window.open(data.signedUrl, '_blank');
      });
    });

    // Video preview buttons
    document.querySelectorAll('.btn-preview-video').forEach(btn => {
      btn.addEventListener('click', async () => {
        const path = btn.getAttribute('data-path')!;
        const container = document.querySelector(`.video-preview-container[data-path="${path}"]`) as HTMLDivElement;
        if (container.classList.contains('hidden')) {
          const { data } = await supabase.storage.from('candidates').createSignedUrl(path, 3600);
          if (data?.signedUrl) {
            container.innerHTML = `<video controls class="w-full rounded-lg" src="${data.signedUrl}"></video>`;
            container.classList.remove('hidden');
            (btn as HTMLButtonElement).textContent = 'Masquer';
          }
        } else {
          container.classList.add('hidden');
          (btn as HTMLButtonElement).textContent = 'Voir';
        }
      });
    });

    // Delete buttons
    document.querySelectorAll('.btn-delete').forEach(btn => {
      btn.addEventListener('click', async () => {
        if (!confirm('Supprimer ce document ?')) return;
        const docId = btn.getAttribute('data-id')!;
        const path = btn.getAttribute('data-path')!;

        await supabase.storage.from('candidates').remove([path]);
        await supabase.from('candidate_documents').delete().eq('id', docId);
        window.location.reload();
      });
    });
  }

  init();
</script>
