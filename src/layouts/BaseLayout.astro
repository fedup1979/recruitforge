---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'AMBITIA — Recrutement international',
  description = 'AMBITIA connecte les talents du monde entier avec des missions stables et bien rémunérées en télétravail.',
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, 'https://ambitia.io').toString();
---

<html lang="fr" data-theme="ambitia">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="fr_FR" />
    <meta property="og:site_name" content="AMBITIA" />
    <meta property="og:url" content={canonicalUrl} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-base-100 font-sans flex flex-col">
    <!-- Navbar -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-2 focus:left-2 focus:z-[100] focus:btn focus:btn-primary focus:btn-sm">Aller au contenu principal</a>
    <nav class="navbar bg-neutral text-neutral-content sticky top-0 z-50" aria-label="Navigation principale">
      <div class="navbar-start">
        <!-- Mobile hamburger menu -->
        <div class="dropdown">
          <div tabindex="0" role="button" class="btn btn-ghost lg:hidden" aria-label="Menu">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
            </svg>
          </div>
          <ul tabindex="0" class="menu menu-sm dropdown-content bg-neutral rounded-box z-10 mt-3 w-52 p-2 shadow">
            <li><a href="/">Accueil</a></li>
            <li><a href="/jobs">Postes</a></li>
            <li><a href="/about">À propos</a></li>
            <li class="hidden" id="mobile-dashboard"><a href="/dashboard">Dashboard</a></li>
            <li class="hidden" id="mobile-admin"><a href="/admin">Admin</a></li>
            <li class="hidden" id="mobile-logout"><a href="#" id="mobile-logout-btn">Déconnexion</a></li>
          </ul>
        </div>
        <a href="/" class="btn btn-ghost text-xl font-bold">AMBITIA</a>
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
          <li><a href="/">Accueil</a></li>
          <li><a href="/jobs">Postes</a></li>
          <li><a href="/about">À propos</a></li>
        </ul>
      </div>
      <div class="navbar-end" id="navbar-auth">
        <a href="/login" class="btn btn-primary btn-sm" id="nav-login">Connexion</a>
        <div class="hidden flex items-center gap-2" id="nav-logged">
          <a href="/dashboard" class="btn btn-ghost btn-sm" id="nav-dashboard">Dashboard</a>
          <a href="/admin" class="btn btn-ghost btn-sm hidden" id="nav-admin">Admin</a>
          <button class="btn btn-outline btn-sm" id="nav-logout">Déconnexion</button>
        </div>
      </div>
    </nav>

    <!-- Main content -->
    <main class="flex-1" id="main-content">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="footer footer-center bg-neutral text-neutral-content p-10" role="contentinfo">
      <nav aria-label="Liens du pied de page" class="grid grid-flow-col gap-4">
        <a href="/about" class="link link-hover">À propos</a>
        <a href="/jobs" class="link link-hover">Postes</a>
        <a href="/privacy" class="link link-hover">Confidentialité</a>
        <a href="/terms" class="link link-hover">CGU</a>
      </nav>
      <aside>
        <p>&copy; {new Date().getFullYear()} AMBITIA. Tous droits réservés.</p>
      </aside>
    </footer>

    <script>
      import { createClient } from '@supabase/supabase-js';
      const supabase = createClient(
        import.meta.env.PUBLIC_SUPABASE_URL,
        import.meta.env.PUBLIC_SUPABASE_ANON_KEY
      );

      async function updateNav() {
        const { data: { session } } = await supabase.auth.getSession();
        if (!session) return;

        // Show logged-in nav
        document.getElementById('nav-login')?.classList.add('hidden');
        const loggedDiv = document.getElementById('nav-logged');
        loggedDiv?.classList.remove('hidden');
        loggedDiv?.classList.add('flex');

        // Show mobile logged-in links
        document.getElementById('mobile-dashboard')?.classList.remove('hidden');
        document.getElementById('mobile-logout')?.classList.remove('hidden');

        // Check if admin
        const { data: profile } = await supabase
          .from('profiles')
          .select('role')
          .eq('id', session.user.id)
          .single();

        if (profile?.role === 'admin') {
          // Show admin link, hide dashboard link (admin goes to /admin)
          document.getElementById('nav-admin')?.classList.remove('hidden');
          document.getElementById('nav-dashboard')?.classList.add('hidden');
          document.getElementById('mobile-admin')?.classList.remove('hidden');
          document.getElementById('mobile-dashboard')?.classList.add('hidden');
        }
      }

      async function handleLogout() {
        await supabase.auth.signOut();
        window.location.href = '/';
      }

      document.getElementById('nav-logout')?.addEventListener('click', handleLogout);
      document.getElementById('mobile-logout-btn')?.addEventListener('click', (e) => {
        e.preventDefault();
        handleLogout();
      });

      updateNav();
    </script>
  </body>
</html>
