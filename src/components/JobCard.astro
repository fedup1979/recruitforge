---
interface Props {
  id: string;
  title: string;
  countryFlag: string;
  countryName: string;
  location: string;
  salary_label: string;
  contract_type: string;
}

const { id, title, countryFlag, countryName, location, salary_label, contract_type } = Astro.props;
---

<a href={`/jobs/${id}`} class="card bg-base-200 shadow-sm hover:shadow-md transition-shadow">
  <div class="card-body">
    <h3 class="card-title text-base md:text-lg">{title}</h3>
    <div class="flex flex-wrap gap-2 mt-2">
      <span class="badge badge-outline gap-1">
        <span class="text-base">{countryFlag}</span>
        {countryName}
      </span>
      <span class="badge badge-outline">{location}</span>
      <span class="badge badge-outline">{contract_type}</span>
    </div>
    <div class="mt-3">
      <span class="badge badge-primary badge-lg font-semibold">{salary_label}</span>
    </div>
    <div class="card-actions justify-end mt-2">
      <span class="text-primary text-sm font-medium">Voir le poste &rarr;</span>
    </div>
  </div>
</a>
